<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/paper_1280x720</item>
		<item name="android:windowNoTitle">true</item>        
    </style>
    
    <!-- Text styles  -->
    <style name="ActivityTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_activity_title_normal</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="subTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_subtitle_normal</item>
        <item name="android:background">@android:color/transparent</item>
	</style>
	
    <style name="ListItemTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_list_item_title_normal</item>
        <item name="android:background">@android:color/transparent</item>
	</style>

        <style name="ListItemLargeText" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_list_item_large_text_normal</item>
        <item name="android:background">@android:color/transparent</item>
	</style>
    	
    <style name="listItemText" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textSize">@dimen/text_size_list_item_text_normal</item>
        <item name="android:background">@android:color/transparent</item>
	</style>
</resources>